---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { RESUME } from "@consts";
---

<Layout title={RESUME.TITLE} description={RESUME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          Resume
        </div>
        <section class="animate not-prose flex flex-col gap-4 text-justify">
          <div class="flex items-center justify-center py-20">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-gray-600 dark:text-gray-400 mb-4">Work in Progress</h2>
              <p class="text-gray-500 dark:text-gray-500">Resume content coming soon...</p>
            </div>
          </div>
        </section>
      </div>
    </aside>
  </Container>
</Layout> 